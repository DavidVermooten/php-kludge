{% extends 'base.html.twig' %}

{% block body %}

	<h2 class="page-header">File in the directory - {{ directory }}</h2>

    	<p>
			The files in {{ directory }} are as follows: 
		</p>

	{% for file in filenames %}
		<table class="table table-bordered"> 
			<thead> 
				<tr> 
					<th>Tag</th>
					<th>{{ file.resourceName }}</th> 
				</tr> 
			</thead> 
			<tbody> 
				{% for key, value in file %}
					<tr> 
						<td>{{ key }}</td>
						<td>{{ value }}</td> 
					</tr> 
				{% endfor %}
			</tbody> 
		</table>
	{% endfor %}

{% endblock %}





